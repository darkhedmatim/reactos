#!/bin/bash

TIME="$(dirname $0)/time"

$TIME bash -c "(
	export CCACHE_DIR=/opt/buildbot/ccache
	export CCACHE_PATH=/usr/local/rosbe/bin:$PATH
	export CCACHE_HARDLINK=1
	export PATH=/usr/lib64/ccache/bin:$PATH
	export ROS_INTERMEDIATE=/mnt/ramdisk/buildbot/debug/obj
	export ROS_OUTPUT=/mnt/ramdisk/buildbot/debug/output
	export ROS_RBUILDFLAGS=\"-dd\"
	export LANG=en_US
	make -j8 $@
)"

