#############################################
# PROGRAMS
#
CC			= gcc

ifeq ($(HOST),mingw32-linux)
RM			= rm -f
else
RM			= cmd /C del
endif

#############################################

TOOLS	=	deptool	\
			bin2c \
			hosttype \
			rdel \
			rcopy \
			rmkdir \
			rrmdir

#############################################

all : $(TOOLS)
	@echo Tools are up to date.

% :: all

#############################################

%: %.c
	@echo ===================================================== Compiling $*
	@$(CC) -Wall -O3 -o $@ $<

#############################################


.PHONY : clean
clean:
	@-$(RM) $(TOOLS)
	@-$(RM) *.exe
	@echo Clean ALL done.
